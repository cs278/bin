#!/bin/bash

set -o pipefail
set -e
set -u

usage() {
	echo "$0 [host] [port]"
}

case "${1:-}" in
	--help|-h)
		usage

		exit 0
	;;
esac

if [ $# -gt 2 ];
then
	usage >&2

	exit 1
fi

host=${1:-localhost}
port=${2:-4730}

nc -z $host $port &&
{
	printf "%s\t%s\t%s\t%s\n" "Function" "Jobs" "Running" "Workers";
	printf "%s\n" "status" | nc -i 1 $host $port | sed "\$d"
} | column -t
